<div>
	<h1><%= @tag.phrase %></h1>
</div>

<div class="row">
	<div>
		<% @tag.tweets.order(created_at: :desc).each do |tweet| %>
			<div class="well">
				<p>
					<%= image_tag tweet.user.avatar.url, size: 25 %>
					<%= tweet.user.name %>
					<%= link_to "@#{tweet.user.username}", show_user_path(id: tweet.user_id) %>
					<%= Time.now - tweet.created_at < 86400 ? time_ago_in_words(tweet.created_at) : tweet.created_at.strftime('%b %e') %>
				</p>
				<p><%= tweet.message.html_safe %></p>
			</div>
		<% end %>
	</div>
</div>
