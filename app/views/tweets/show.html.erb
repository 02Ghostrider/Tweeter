<h3>@<%= @tweet.user.username %>'s Tweet</h3>
<div class="well">
	
	<p>
		<%= image_tag @tweet.user.avatar_url, size: 25 %>
		<%= @tweet.user.name %>
		<%= link_to "@#{@tweet.user.username}", show_user_path(id: @tweet.user.id) %>
		<%= Time.now - @tweet.created_at < 86400 ? "#{time_ago_in_words(tweet.created_at)} ago" : @tweet.created_at.strftime('%b %e') %> 
	</p>

	<p><%= @tweet.message.html_safe %></p>

	<p>
    <strong>User:</strong>
    <%= link_to @tweet.user.username, show_user_path(id: @tweet.user.id) %>
	</p>

</div>

<%= link_to 'Edit', edit_tweet_path(@tweet), class: "btn btn-warning" %>
<%= link_to 'Back', tweets_path, class: "btn btn-success" %>
